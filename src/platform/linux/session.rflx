
package Session is

   type Action_Type is (Request, Confirm, Reject, Register) with
      Size => 8;

   type Kind_Type is (Message, Log, Memory, Rom, Timer, Packet) with
      Size => 8;

   type Length_Type is mod 2 ** 8;

   type PDU is
      message
         Action       : Action_Type;
         Kind         : Kind_Type;
         Name_Length  : Length_Type
            then Name
               with Length => Name_Length * 8
               if Name_Length > 0,
            then Label_Length
               if Name_Length = 0;
         Name         : Payload;
         Label_Length : Length_Type
            then Label
               with Length => Label_Length * 8
               if Label_Length > 0,
            then null
               if Label_Length = 0;
         Label        : Payload;
      end message;

end Session;
